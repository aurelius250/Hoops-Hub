<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team Standings</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Team Standings</h1>
    <h2>Eastern Conference</h2>
    <table id="east-teams">
        <thead>
            <tr>
                <th>Team Name</th>
                <th>Wins</th>
                <th>Losses</th>
                <th>Win Percentage</th>
                <th>Home Record</th>
                <th>Away Record</th>
            </tr>
        </thead>
        <tbody>
            <!-- Render Eastern conference teams here using EJS -->
            <% eastTeams.forEach(team => { %>
                <tr>
                    <td><%= team.team_name %></td>
                    <td><%= team.team_wins %></td>
                    <td><%= team.team_losses %></td>
                    <td><%= team.win_percentage %></td>
                    <td><%= team.home_record %></td>
                    <td><%= team.away_record %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <h2>Western Conference</h2>
    <table id="west-teams">
        <thead>
            <tr>
                <th>Team Name</th>
                <th>Wins</th>
                <th>Losses</th>
                <th>Win Percentage</th>
                <th>Home Record</th>
                <th>Away Record</th>
            </tr>
        </thead>
        <tbody>
            <!-- Render Western conference teams here using EJS -->
            <% westTeams.forEach(team => { %>
                <tr>
                    <td><%= team.team_name %></td>
                    <td><%= team.team_wins %></td>
                    <td><%= team.team_losses %></td>
                    <td><%= team.win_percentage %></td>
                    <td><%= team.home_record %></td>
                    <td><%= team.away_record %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <script>  
        function goToPage() {
          window.location.href = "team_standings.html";
        }
      </script>
       
</body>
</html>