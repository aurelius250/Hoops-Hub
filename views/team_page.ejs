<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team Page</title>
    <link rel="stylesheet" href="styles.css">
    
    <style>
        table {
          border-collapse: collapse;
          width: 100%;
        }
        th, td {
          border: 1px solid #dddddd;
          text-align: left;
          padding: 8px;
          background-color: white;
        }
        th {
          background-color: #f2f2f2;
        }

      </style>
</head>
<body>
    <h1>Player List</h1>

  <table>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Position</th>
      <th>Team</th>
      <th>Height (CM)</th>
      <th>Weight</th>
      <th> Points per Game </th> 
      <th> Assists per Game </th>
      <th> Rebounds per Game </th>
      <th> 3 Point % </th>
      <th> Field Goal % </th>

    </tr>
    <!-- Populating stats table using Express -->
    <% rows.forEach(row => { %>
      <tr>
        <td><%= row.player_id %></td>
        <td><%= row.full_name %></td>
        <td><%= row.position %></td>
        <td><%= row.team_name %></td>
        <td><%= row.height%></td>
        <td><%= row.weight %></td>
        <td><%= row.points_per_game %></td>
        <td><%= row.assists_per_game%></td>
        <td><%= row.rebounds_per_game %></td>
        <td><%= row.three_perc %></td>
        <td><%= row.fg_perc %></td>
      </tr>
    <% }) %>
  </table>
  <button onclick="goToPage()">Back</button>
  <script>  
    function goToPage() {
      window.location.href = "index.html";
    }
  </script>
</body>
</html>